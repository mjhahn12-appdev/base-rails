<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all plans
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new plan
    </h2>

    <form action="/insert_plan" method="post">
      <div class="form-group">
        <label for="sender_id_box">
          Sender
        </label>

        <input type="text" id="sender_id_box" name="query_sender_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="recipient_id_box">
          Recipient
        </label>

        <input type="text" id="recipient_id_box" name="query_recipient_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status" class="form-control">
      </div>

      <div class="form-group">
        <label for="plan_time_box">
          Plan time
        </label>

        <input type="datetime-local" id="plan_time_box" name="query_plan_time" class="form-control">
      </div>

      <div class="form-group">
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="query_location" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create plan
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sender
        </th>

        <th>
          Recipient
        </th>

        <th>
          Status
        </th>

        <th>
          Plan time
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @plans.each do |plan| %>
      <tr>
        <td>
          <%= plan.id %>
        </td>

        <td>
          <%= plan.sender_id %>
        </td>

        <td>
          <%= plan.recipient_id %>
        </td>

        <td>
          <%= plan.status %>
        </td>

        <td>
          <%= plan.plan_time %>
        </td>

        <td>
          <%= plan.location %>
        </td>

        <td>
          <%= time_ago_in_words(plan.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(plan.updated_at) %> ago
        </td>

        <td>
          <a href="/plans/<%= plan.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
