<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Make a new plan
    </h2>

    <form action="/insert_plan" method="post">
      <div class="form-group">

      <div class="form-group">
        <label for="recipient_username_box">
          Who do you want to make it with?
        </label>

        <input type="text" id="recipient_username_box" name="query_recipient_username" class="form-control">
      </div>
      
      <div class="form-group">
        <label for="recipient_phonenumber_box">
          What is his/her phone number?
        </label>
        <input type="text" id="recipient_phonenumber_box" name="query_recipient_phonenumber" class="form-control">
      </div>

      <div class="form-group">
        <label for="plan_time_box">
          When is this plan?
        </label>

        <input type="datetime-local" id="plan_time_box" name="query_plan_time" class="form-control">
      </div>

      <div class="form-group">
        <label for="location_box">
          Where is the plan?
        </label>

        <input type="text" id="location_box" name="query_location" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Make Plan
      </button>
    </form>
  </div>
</div>